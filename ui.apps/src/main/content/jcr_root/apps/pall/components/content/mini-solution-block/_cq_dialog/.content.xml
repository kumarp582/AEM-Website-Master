<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Mini Solution Block"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text &amp; Image - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <general
                jcr:primaryType="nt:unstructured"
                jcr:title="General Configuration"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <color
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="pall/components/touch-ui/widget/colorpicker"
                                fieldLabel="Background Color"
                                fieldDescription="Color to be displayed as background for this component"
                                freestylePaletteType="{Boolean}true"
                                name="./bgColor"/>
                        </items>
                    </columns>
                </items>
            </general>
            <tab2
                jcr:primaryType="nt:unstructured"
                jcr:title="Solution Block1"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <image
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldLabel="Product Image"
                                fileReferenceParameter="./block1/prodImage/fileReference"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                name="./block1/prodImage/file"
                                title="Product Image"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <prodllink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldLabel="View Product Link"
                                name="./block1/viewProductLink"
                                rootPath="/content/pall"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Title for the solution block"
                                fieldLabel="Title"
                                name="./block1/title"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                fieldDescription="Short Description of the solution block"
                                fieldLabel="Description"
                                name="./block1/description"/>
                            <bgImage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldLabel="Background Image"
                                fileReferenceParameter="./block1/bgImage/fileReference"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                name="./block1/bgImage/file"
                                title="Background Image"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <link
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldLabel="Learn More Link"
                                required="{Boolean}true"
                                name="./block1/learnMoreLink"
                                rootPath="/content/pall"/>
                            <linkSubtitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Subtitle for the Learn More link"
                                fieldLabel="Link Subtitle"
                                name="./block1/learnMoreLinkSubtitle"/>
                        </items>
                    </columns>
                </items>
            </tab2>
            <tab3
                jcr:primaryType="nt:unstructured"
                jcr:title="Solution Block2"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <image
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldLabel="Product Image"
                                fileReferenceParameter="./block2/prodImage/fileReference"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                name="./block2/prodImage/file"
                                title="Product Image"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <prodllink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldLabel="View Product Link"
                                name="./block2/viewProductLink"
                                rootPath="/content/pall"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Title for the solution block"
                                fieldLabel="Title"
                                name="./block2/title"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                fieldDescription="Short Description of the solution block"
                                fieldLabel="Description"
                                name="./block2/description"/>
                            <bgImage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldLabel="Background Image"
                                fileReferenceParameter="./block2/bgImage/fileReference"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                name="./block2/bgImage/file"
                                title="Background Image"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <link
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldLabel="Learn More Link"
                                required="{Boolean}true"
                                name="./block2/learnMoreLink"
                                rootPath="/content/pall"/>
                            <linkSubtitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Subtitle for the Learn More link"
                                fieldLabel="Link Subtitle"
                                name="./block2/learnMoreLinkSubtitle"/>
                        </items>
                    </columns>
                </items>
            </tab3>
        </items>
    </content>
</jcr:root>
